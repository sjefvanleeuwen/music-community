{
  "name": "music-community",
  "version": "1.0.0",
  "description": "Music community platform for musicians and fans",
  "main": "dist/server/index.js",
  "scripts": {
    "start": "node dist/server/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server/index.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "db:migrate": "node scripts/run-migrations.js",
    "db:reset": "node scripts/run-migrations.js --reset",
    "db:seed": "ts-node src/server/db/seeds/index.ts",
    "db:setup": "npm run db:migrate && npm run db:seed",
    "setup:mailhog": "node scripts/setup-mailhog.js",
    "check:mailhog": "node scripts/check-mailhog.js",
    "mail:start": "cd tools/mailhog && ./start-mailhog.sh",
    "mail:start:win": "cd tools/mailhog && start-mailhog.bat",
    "dev:with-mail": "concurrently \"npm run dev\" \"npm run mail:start\"",
    "test:smtp": "node scripts/test-smtp.js",
    "mailhog:start": "node scripts/start-mailhog.js",
    "dev:mail": "concurrently \"npm run mailhog:start\" \"npm run dev\"",
    "dev:all": "node start-dev-with-mail.js",
    "test:mail": "node scripts/test-smtp.js"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "sqlite": "^4.1.2",
    "sqlite3": "^5.1.4",
    "nodemailer": "^6.9.1",
    "handlebars": "^4.7.7",
    "winston": "^3.8.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.14.6",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.35.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/nodemailer": "^6.4.7",
    "concurrently": "^8.0.1"
  }
}
